#!/usr/bin/env bash

mkdir -p "$HOME/bin/logbuddy/bash-clients/includes"

pushd "$HOME/bin/logbuddy/bash-clients/includes" >/dev/null || exit 1
  curl --silent -O https://raw.githubusercontent.com/logbuddy/bash-clients/main/src/includes/colors.sh
  pushd .. >/dev/null || exit 1
    curl --silent -O https://raw.githubusercontent.com/logbuddy/bash-clients/main/src/sl-setup
    curl --silent -O https://raw.githubusercontent.com/logbuddy/bash-clients/main/src/sl-streamfile
    chmod 0755 ./sl-*
  popd >/dev/null || exit 1
popd >/dev/null || exit 1

/usr/bin/env bash "$HOME/bin/logbuddy/bash-clients/sl-setup"
